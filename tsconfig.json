{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "jsx": "react",
        "lib": ["ES5", "ES2015", "ES2016", "DOM", "ESNext"],
        "types": ["node"],
        "esModuleInterop": true,
        "target": "es6",
        "module": "ES2015",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "outDir": "./dist/esm",
        "sourceMap": true,
        "strict": true,
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": ["node_modules", "svg", "generate.mts"]
}